@model QuickReceipt.Models.Profile

@{
    ViewBag.Title = "Edit";
}

<h2 align="center">Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Profile</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.Label("Category")  
        </div>
        <div class="editor-field">
            @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories as System.Collections.IEnumerable, "Id", "Description", Model.CategoryId))
            @Html.ValidationMessageFor(model => model.CategoryId)
        </div>

        <div class="editor-label">
            @Html.Label("Type") 
        </div>
        <div class="editor-field">
            @Html.DropDownList("TypeId", new SelectList(ViewBag.Types as System.Collections.IEnumerable, "Id", "Description", Model.TypeId))
            @Html.ValidationMessageFor(model => model.TypeId)
        </div>

        <div class="editor-label">
            @Html.Label("Item") 
        </div>
        <div class="editor-field">
            @Html.DropDownList("ItemId", new SelectList(ViewBag.Items as System.Collections.IEnumerable, "Id", "Description", Model.ItemId))
            @Html.ValidationMessageFor(model => model.ItemId)
        </div>

        <div class="editor-label">
            @Html.Label("Issue") 
        </div>
        <div class="editor-field">
            @Html.DropDownList("IssueId", new SelectList(ViewBag.Issues as System.Collections.IEnumerable, "Id", "Description", Model.IssueId))
            @Html.ValidationMessageFor(model => model.IssueId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div data-role="controlgroup" data-type="horizontal">
    <a href="/QuickReceipt/Profile" data-role="button" data-icon="arrow-l">Back</a>
</div>
